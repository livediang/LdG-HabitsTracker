@model App.web.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Create an Account";
    Layout = "_AccountLayout";
}

<div class="wrapper">
    <form asp-action="Register" method="post">
        <h2>@ViewData["Title"]</h2>

        <div class="input-field">
            <input asp-for="FullName" required />
            <label asp-for="FullName"></label>
            <span asp-validation-for="FullName"></span>
        </div>

        <div class="input-field">
            <input asp-for="Email" type="email" required />
            <label asp-for="Email"></label>
            <span asp-validation-for="Email"></span>
        </div>

        <div class="input-field">
            <input asp-for="Password" type="password" required />
            <label asp-for="Password"></label>
            <span asp-validation-for="Password"></span>
        </div>

        <div class="input-field">
            <input asp-for="ConfirmPassword" type="password" required />
            <label asp-for="ConfirmPassword"></label>
            <span asp-validation-for="ConfirmPassword"></span>
        </div>

        <input class="btn-send" type="submit" value="Register" />

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>