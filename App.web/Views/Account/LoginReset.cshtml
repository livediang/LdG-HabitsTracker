@model string

@{
    ViewData["Title"] = "Forgot Password?";
    Layout = "_AccountLayout";
}

<div class="wrapper">
    <form asp-action="LoginReset" method="post">
        <h2>@ViewData["Title"]</h2>
        <p>Enter your email address and we’ll send you a link to reset your password.</p>

        <div class="input-field">
            <input type="email" name="mailUser" id="mailUser" required />
            <label for="mailUser">Email</label>
        </div>

        <input class="btn-send" type="submit" value="Send Reset Link" />

        @if (ViewBag.Message != null)
        {
            <div class="validation-summary-errors">@ViewBag.Message</div>
        }

        <div class="urls">
            <a asp-controller="Account" asp-action="Login">Back to Login</a>
        </div>
    </form>
</div>