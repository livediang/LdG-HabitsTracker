@{
    ViewData["Title"] = "Password Reset Successful";
    Layout = "_AccountLayout";
}

<div class="wrapper">
    <div class="account-mark"></div>
    <div class="account-box">
        <div class="system-message text-center">
            <div class="icon mb-3">
                <span class="display-1">🔑</span>
            </div>

            <h2 class="message-title text-success">Password Reset Successful</h2>
            <p class="message-body">
                Your password has been updated successfully.<br />
                Please log in with your new credentials.
            </p>
            <br />
            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn-send">Log In</a>
            </div>
        </div>
    </div>
</div>