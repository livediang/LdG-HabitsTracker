@{
    ViewData["Title"] = "Email Verified";
    Layout = "_AccountLayout";
}

<div class="wrapper">
    <div class="account-mark"></div>
    <div class="account-box">
        <div class="system-message text-center">
            <div class="icon mb-3">
                <span class="display-1">✅</span>
            </div>

            <h2 class="message-title text-success">Email Verified</h2>
            <p class="message-body">
                Your email has been successfully verified.<br />
                You can now log in and start using your account.
            </p>

            <div class="mt-4">
                <a asp-controller="Account" asp-action="Login" class="btn-send">Log In</a>
            </div>
        </div>
    </div>
</div>