@using Microsoft.AspNetCore.Authentication
@using System.Security.Claims



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Habits Tracker App</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/App.web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/administration.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>
<body>
    <!-- Toggle -->
    <input type="checkbox" id="nav-collapse-toggle" class="nav-collapse-toggle" />

    <header>
        <nav class="navbar" role="navigation" aria-label="Main Navigation">
            <div class="navbar-index navbar-dark">
                <label for="nav-collapse-toggle"
                       class="nav-collapse-toggle-label"
                       aria-label="Toggle navigation">
                    <span class="bi bi-list"></span>
                </label>
            </div>
            <div class="navbar-left navbar-dark">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="brand-full">Habits Tracker App</span>
                </a>
            </div>
            <div class="navbar-right navbar-dark">

                @if (User.Identity.IsAuthenticated)
                {
                    <div class="user-profile">
                        <span>@User.FindFirst("FullName")?.Value</span> |
                        <span>@User.FindFirst(ClaimTypes.Email)?.Value</span>
                    </div>
                }

                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                    <i class="bi-escape"></i>
                    <span class="link-text">Log Out</span>
                </a>
            </div>
        </nav>
    </header>

    <div class="layout">
        <aside class="sidebar" role="navigation" aria-label="Sidebar menu">
            <ul class="nav-menu">
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi-house"></i>
                        <span class="link-text">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Administration" asp-action="Index">
                        <i class="bi-person-gear"></i>
                        <span class="link-text">Administration</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                        <i class="bi-shield-lock"></i>
                        <span class="link-text">Privacy</span>
                    </a>
                </li>
            </ul>
        </aside>

        <main role="main" class="main-content">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="d-flex justify-content-between">
            <span>&copy; 2025 - Habits Tracker App</span>
            <nav aria-label="Footer menu">
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </nav>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/administration.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
