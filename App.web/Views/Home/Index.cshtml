@{
    ViewData["Title"] = "Home Page";
    Layout = "_layout";
}
<div class="layout">

    <input type="checkbox" id="nav-collapse-toggle" class="nav-collapse-toggle" checked />
    <div class="nav-bar">
        <!-- HEADER -->
        <div class="nav-title">
            <img src="~/img/ico1.svg" alt="logo" />
            <a class="title">Habits Tracker App</a>
            <label for="nav-collapse-toggle" class="nav-collapse-toggle-label">
                <i class="fas fa-angle-left"></i>
            </label>
        </div>

        <!-- MENU -->
        <div class="nav-menu">
            <div class="nav-button"><img src="~/img/ico2.svg" /><span>User Habits</span></div>
            <div class="nav-button"><img src="~/img/ico2.svg" /><span>Advanced</span></div>
            <div class="nav-button"><img src="~/img/ico2.svg" /><span>Store</span></div>
            <div class="nav-button"><img src="~/img/ico2.svg" /><span>Users System</span></div>
            <div class="nav-button"><img src="~/img/ico2.svg" /><span>Files</span></div>
            <div class="nav-button"><img src="~/img/ico2.svg" /><span>Custom</span></div>
        </div>

        <!-- FOOTER -->
        <input type="checkbox" id="nav-footer-toggle" class="nav-footer-toggle" />
        <div class="nav-footer">
            <div class="nav-footer-heading">
                <div class="nav-footer-avatar">
                    <img src="~/img/ico1.svg" />
                </div>
                <div class="nav-footer-titlebox">
                    <span>User Profile</span>
                </div>
                <label for="nav-footer-toggle" class="nav-footer-toggle-label">
                    <i class="fas fa-caret-up"></i>
                </label>
            </div>
            <div class="nav-footer-content">
                <p>Contenido extra del perfil aquí...</p>
            </div>
        </div>
    </div>

    <div class="side-panel">
        <h2>Panel Intermedio</h2>
        <p>Contenido adicional, menús secundarios o información de contexto.</p>
    </div>

    <div class="main-content">
        <h1>Área Principal</h1>
        <p>Aquí van los formularios, dashboards, tablas, etc.</p>
    </div>
</div>