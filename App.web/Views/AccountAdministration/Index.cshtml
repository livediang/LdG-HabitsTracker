@model IEnumerable<App.web.Models.User>

@{
    ViewData["Title"] = "Users List";
}

@*
<h2>Users List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Full Name</th>
            <th>Active</th>
            <th>Roles</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Profile?.FullName</td>
                <td>@user.IsActive</td>
                <td>
                    @string.Join(", ", user.UserRoles.Select(ur => ur.Role.Name))
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.UserId" class="btn-send btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn-cancel btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn-cancel btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>


