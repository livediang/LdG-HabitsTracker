@model App.web.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="user-details">
    <form asp-action="Edit" asp-controller="Administration" method="post" id="editForm">
        <input type="hidden" asp-for="UserId" />

        <h2>@ViewData["Title"]</h2>

        <div class="input-field">
            <input asp-for="Email" type="email" required />
            <label>Email</label>
        </div>

        <div class="input-field">
            <input asp-for="Profile.FullName" type="text" required />
            <label>Full Name</label>
        </div>

        <div class="input-field">
            <input asp-for="IsActive" type="checkbox" />
            <label>Active</label>       
        </div>

        <div class="actions">
            <button type="submit" class="btn btn-success btn-sm">Save Changes</button>
            <a class="btn btn-secondary btn-sm" href="/Administration/Index">Back</a>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>