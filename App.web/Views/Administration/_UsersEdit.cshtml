@model App.web.Models.User

<div class="wrapper">
    <form asp-action="Edit" method="post" id="editForm">
        <input type="hidden" asp-for="UserId" />

        <h2>@ViewData["Title"]</h2>

        <div class="input-field">
            <input asp-for="Email" type="email" required />
            <label>Email</label>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="input-field">
            <input asp-for="Profile.FullName" type="text" required />
            <label>Full Name</label>
            <span asp-validation-for="Profile.FullName" class="text-danger"></span>
        </div>

        <div class="input-field">
            <input asp-for="IsActive" type="checkbox" />
            <label>Active</label>
        </div>

        <div class="mt-3">
            <input class="btn btn-success" type="submit" value="Save Changes" />
            <a asp-action="Index" class="btn-cancel">Cancel</a>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>