@model App.web.Models.User

@{
    ViewData["Title"] = "Delete User";
}

<div class="user-details">
    <form asp-action="Delete" asp-controller="Administration" method="post" id="deleteForm">
        <input type="hidden" asp-for="UserId" />

        <h2>@ViewData["Title"]</h2>

        <p>Are you sure you want to delete this user?</p>

        <div class="input-field">
            <label>Email</label>
            <input asp-for="Email" readonly />
        </div>

        <div class="input-field">
            <label>Full Name</label>
            <input asp-for="Profile.FullName" readonly />
        </div>

        <div class="actions">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
            <a class="btn btn-secondary btn-sm" href="/Administration/Index">Back</a>
        </div>
    </form>
</div>

