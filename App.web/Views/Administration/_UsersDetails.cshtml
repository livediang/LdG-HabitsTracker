@model App.web.Models.User

@{
    ViewData["Title"] = "User Details";
}

<div class="user-details">
    <h2>@ViewData["Title"]</h2>

    <div class="details-grid">
        <div class="detail-item">
            <strong>Full Name:</strong> @Model.Profile?.FullName
        </div>
        <div class="detail-item">
            <strong>Email:</strong> @Model.Email
        </div>
        <div class="detail-item">
            <strong>Email Confirmed:</strong> @(Model.EmailConfirmed ? "✅ Yes" : "❌ No")
        </div>
        <div class="detail-item">
            <strong>Active:</strong> @(Model.IsActive ? "✅ Yes" : "❌ No")
        </div>
        <div class="detail-item">
            <strong>Roles:</strong>
            <ul>
                @foreach (var role in Model.UserRoles.Select(ur => ur.Role.Name))
                {
                    <li>@role</li>
                }
            </ul>
        </div>
        <div class="detail-item">
            <strong>Created At:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")
        </div>
        <div class="detail-item">
            <strong>Updated At:</strong> @Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm")
        </div>
        <div class="detail-item">
            <strong>Time Zone:</strong> @Model.Profile?.TimeZone
        </div>
        <div class="detail-item">
            <strong>Language:</strong> @Model.Profile?.Language
        </div>
    </div>

    <div class="actions">
        <button class="btn btn-primary btn-sm edit-btn" data-id="@Model.UserId">Edit</button>
        <a class="btn btn-secondary btn-sm" href="/Administration/Index">Back</a>
    </div>
</div>
